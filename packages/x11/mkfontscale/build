#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR

export LIBS="-lz -lpng"
do_configure host
make
make_install toolchain unstripped
echo "#!/bin/sh" >.install/usr/bin/mkfontdir
echo "exec $ROOT/$TOOLCHAIN/bin/mkfontscale -b -s -l \"\$@\"" >>.install/usr/bin/mkfontdir
chmod 755 .install/usr/bin/mkfontdir
