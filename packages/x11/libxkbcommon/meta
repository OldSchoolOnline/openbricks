PKG_NAME=libxkbcommon
PKG_VERSION=0.8.0
PKG_URL="https://xkbcommon.org/download/libxkbcommon-${PKG_VERSION}.tar.xz"
PKG_REV="1"
PKG_DEPENDS="$TARGET_LIBC libX11"
PKG_BUILD_DEPENDS="toolchain util-macros xproto kbproto"
PKG_PRIORITY=optional
PKG_SECTION=misc
PKG_SHORTDESC="libxkbcommon"
PKG_LONGDESC="xkbcommon is a library for handling of keyboard descriptions, including loading them from disk, parsing them and handling their state."
PKG_SECTION=x11
