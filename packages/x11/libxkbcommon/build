#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR

setup_toolchain target
$AUTORECONF -if

if pkg_uses x11 ; then
  do_configure target --with-xkb-config-root=/usr/share/X11/xkb --enable-x11
else
  do_configure target --with-xkb-config-root=/usr/share/X11/xkb --disable-x11
fi

make
make_install
