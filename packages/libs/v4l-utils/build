#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR


export TARGET_CFLAGS="$(echo $TARGET_CFLAGS | sed -e 's%-D_FILE_OFFSET_BITS=64%%')"

# needed, else we've problem at re-link time
export MAKEFLAGS=-j1

do_configure --disable-libdvbv5

make
make_install 

cp -P $ROOT/$PACKAGES/$PKG_SECTION/$1/config/* $install_dir/etc/rc_keymaps
cp utils/keytable/rc_keymaps/* $install_dir/etc/rc_keymaps
