#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR

export HOST_CXXFLAGS="$HOST_CXXFLAGS -Wno-implicit-fallthrough"

setup_toolchain host
mkdir -p build-native
cd build-native
cmake ..
make
cd ..

export TARGET_CXXFLAGS="$TARGET_CXXFLAGS -Wno-implicit-fallthrough"
setup_toolchain target
do_cmake_build \
  -DIMPORT_EXECUTABLES=../build-native/ImportExecutables.cmake
