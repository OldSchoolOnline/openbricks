PKG_NAME=fmt
PKG_VERSION=4.0.0
PKG_URL="https://github.com/fmtlib/fmt/archive/$PKG_VERSION.tar.gz"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain cmake"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="an open-source formatting library for C++"
PKG_LONGDESC="fmt is an open-source formatting library for C++. It can be used as a safe alternative to printf or as a fast alternative to IOStreams."
