PKG_URL="http://www.freedesktop.org/software/${PKG_NAME}/release/${PKG_NAME}-${PKG_VERSION}.tar.gz"
PKG_REV="3"
PKG_DEPENDS="freetype zlib libxml2 expat"
PKG_BUILD_DEPENDS="toolchain"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_SECTION=libs
PKG_PRIORITY=optional
PKG_SHORTDESC="generic font configuration library"
PKG_LONGDESC="Fontconfig is a font configuration and customization library, which does not depend on the X Window System. It is designed to locate fonts within the system and select them according to requirements specified by applications."
