#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR

local_cflags=-Wno-switch

do_configure \
    --disable-server \
    --disable-pool \
    --disable-krb5 \
    --disable-sspi \
    --disable-rpath \
    --with-tdsver=7.2 \
    --with-openssl=$LIB_PREFIX

make
make_install

chmod -x .install/etc/*.conf
