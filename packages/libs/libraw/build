#!/bin/sh

. config/options

get_meta $1
demosaic_stem=$PKG_BUILD_DIR/LibRaw-demosaic-pack-GPL

for gpl in 2 3; do  
  (
    get_meta libraw-demosaic-gpl${gpl}
    $SCRIPTS/unpack $PKG_NAME
    rm -f ${demosaic_stem}${gpl}
    ln -sf ../$(basename $PKG_BUILD_DIR) ${demosaic_stem}${gpl}
  )
done

cd $PKG_BUILD_DIR

do_autoconf
do_configure
make
make_install
