PKG_NAME=qwt
PKG_VERSION="6.1.3"
PKG_URL="$SFNET_SRCS/$PKG_NAME/$PKG_NAME/$PKG_NAME-$PKG_VERSION.tar.bz2"

PKG_REV="1"

if [ "$USE_qt5" = "yes" ]; then
  PKG_DEPENDS="$TARGET_LIBC qt5"
else
  PKG_DEPENDS="$TARGET_LIBC qt4"
fi

PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Qt Widgets for Technical Applications"
PKG_LONGDESC="The Qwt library contains GUI Components and utility classes which are primarily useful for programs with a technical background."
