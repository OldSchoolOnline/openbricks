#! /bin/sh

. config/options

get_meta $1
[ -z "$PKG_REV" ] && exit 0

cd $PKG_BUILD_DIR

# enable SSE2 for i386 target
[ "$TARGET_ARCH" = i386 ] && export CFLAGS="$CFLAGS -msse2"

# force SSE2 on Intel platforms
if [ "$TARGET_ARCH" = i386 ] || [ "$TARGET_ARCH" = x86_64 ]; then
  CMAKE_EXTRA="-DHAS_SSE2=1"
fi

do_cmake_build $CMAKE_EXTRA \
  -DOVERRIDE_PATHS=1 \
  -DCMAKE_MODULE_PATH=$LIB_PREFIX/lib/kodi
