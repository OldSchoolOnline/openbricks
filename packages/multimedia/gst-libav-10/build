#!/bin/sh

. config/options

export LIBS="-L$SYSROOT_PREFIX/usr/lib"

get_meta $1
cd $PKG_BUILD_DIR

do_configure \
  --enable-silent-rules \
  --with-system-libav \
  --enable-orc \
  --disable-valgrind \
  --disable-docbook \
  --disable-gtk-doc \
  --disable-gtk-doc-html \
  --disable-gtk-doc-pdf \

make
make_install
