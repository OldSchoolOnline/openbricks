#!/bin/sh

. config/options

export LIBS="-L$SYSROOT_PREFIX/usr/lib"

get_meta $1
cd $PKG_BUILD_DIR

do_autoconf

do_configure \
            --disable-nls \
            --disable-rpath \
            --disable-gtk-doc \
            --enable-experimental \
            --enable-orc \


make
make_install
