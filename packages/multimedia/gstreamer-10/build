#!/bin/sh

. config/options

if [ "$DEBUG" = yes ]; then
  DEBUG_CONFIG="--enable-debug --enable-gst-debug"
else
  DEBUG_CONFIG="--disable-debug --disable-gst-debug"
fi

get_meta $1
cd $PKG_BUILD_DIR

export PATH="$PATH:$LIB_PREFIX/bin"
do_configure \
            --enable-largefile \
            --disable-nls \
            --enable-parse \
            --disable-valgrind \
            --disable-docbook \
            --disable-examples \
            --disable-tests \
            --disable-failing-tests \
            --disable-benchmarks \
            $DEBUG_CONFIG \

make
make_install

GST_VERSION=1.0
sed -i "s%^pluginsdir=.*%pluginsdir=/usr/lib/gstreamer-$GST_VERSION%" \
  .install/usr/lib/pkgconfig/gstreamer-${GST_VERSION}.pc
