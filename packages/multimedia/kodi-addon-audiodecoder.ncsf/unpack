#! /bin/sh

. config/options

get_meta $1

# remove _LIBCPP_VERSION from CMakeLists
sed -e "/^add_definitions(-D_LIBCPP_VERSION)/d" -i $PKG_BUILD_DIR/lib/SSEQPlayer/CMakeLists.txt

# set _LIBCPP_VERSION only if the compiler properly supports C++11
cat >>$PKG_BUILD_DIR/lib/SSEQPlayer/CMakeLists.txt <<EOF

if (NOT CMAKE_CXX_COMPILER_ID STREQUAL "GNU" OR CMAKE_CXX_COMPILER_VERSION VERSION_GREATER 5.0)
  add_definitions(-D_LIBCPP_VERSION)
endif()
EOF
